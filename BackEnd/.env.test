# Application
APP_NAME=Patient Relationship Manager - Test
NODE_ENV=test
PORT=3001
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3001
THROTTLE_TTL=0
THROTTLE_LIMIT=0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=prm_db_test
DB_SCHEMA=public
DB_SYNC=true
DB_LOGGING=false
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=prm_test

# JWT
JWT_SECRET=test-secret-key
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=24h

# Mail
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_USER=test
MAIL_PASSWORD=test
MAIL_FROM=test@prm.local
MAIL_TRANSPORT=smtp

# SMS
SMS_PROVIDER=test
SMS_ACCOUNT_SID=test-sid
SMS_AUTH_TOKEN=test-token
SMS_FROM_NUMBER=+15555555555

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./test/uploads

# Push Notifications
FIREBASE_USE_EMULATOR=true
FIREBASE_EMULATOR_HOST=localhost
FIREBASE_EMULATOR_PORT=9099

# Testing
TEST_TIMEOUT=5000
JEST_JUNIT_OUTPUT_DIR=./test-results
COVERAGE_DIR=./coverage

# Debug
DEBUG=false
LOG_LEVEL=error

# System
TZ=UTC
LOCALE=en-US
DEFAULT_CURRENCY=USD