# Application
APP_NAME=Patient Relationship Manager - Dev
NODE_ENV=development
PORT=3000
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:4200
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=prm_db_dev
DB_SCHEMA=public
DB_SYNC=true
DB_LOGGING=true
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=prm_dev

# JWT
JWT_SECRET=development-secret-key-change
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Mail
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_USER=ethereal-test-email
MAIL_PASSWORD=ethereal-test-password
MAIL_FROM=dev@prm.local
MAIL_TRANSPORT=smtp

# SMS - Development credentials
SMS_PROVIDER=test
SMS_ACCOUNT_SID=test-account
SMS_AUTH_TOKEN=test-token
SMS_FROM_NUMBER=+15555555555

# Storage - Local
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Push Notifications - Development
FIREBASE_USE_EMULATOR=true
FIREBASE_EMULATOR_HOST=localhost
FIREBASE_EMULATOR_PORT=9099

# Monitoring - Development
ENABLE_MONITORING=false
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Development Tools
SWAGGER_ENABLED=true
PLAYGROUND_ENABLED=true

# Debug
DEBUG=true
DEBUG_PRINT_LIMIT=1000

# Development Services
USE_MOCKS=true
MOCK_EXTERNAL_SERVICES=true

# System
TZ=UTC
LOCALE=en-US
DEFAULT_CURRENCY=USD